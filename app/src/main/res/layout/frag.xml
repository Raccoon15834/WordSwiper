<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple">
    <!--set array of words-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chordQuestion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/baseChordName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/words"
        android:layout_marginBottom="10dp"
        android:text="Chord:"
        android:textSize="@dimen/smallTxt"
        android:fontFamily="serif"
        android:textColor="@color/yellow"
        android:layout_margin="@dimen/avgPadding" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/baseChordName"
        app:layout_constraintLeft_toRightOf="@id/chordQuestion"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        android:text="numDefault"
        android:layout_margin="@dimen/avgPadding"
        android:textColor="@color/orange"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/bigTxt"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/words"
        app:layout_constraintTop_toBottomOf="@id/baseChordName"
        app:layout_constraintBottom_toBottomOf="@id/words"
        android:layout_marginBottom="10dp"
        android:text="Extension:"
        android:textSize="@dimen/smallTxt"
        android:fontFamily="serif"
        android:textColor="@color/yellow"
        android:layout_margin="@dimen/avgPadding"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/words"
        app:layout_constraintLeft_toRightOf="@id/equal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/baseChordName"
        android:layout_marginBottom="10dp"
        android:text="numDefault"
        android:layout_margin="@dimen/avgPadding"
        android:textColor="@color/orange"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/bigTxt"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myBtn1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/myBtn2"
        app:layout_constraintTop_toBottomOf="@id/words"
        android:background="@color/maroon"
        android:textColor="@color/orange"
        android:text="@string/yes"
        android:textSize="@dimen/bigTxt"
        android:layout_margin="@dimen/avgPadding"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkYes"
        app:layout_constraintLeft_toLeftOf="@id/myBtn1"
        app:layout_constraintRight_toRightOf="@id/myBtn1"
        app:layout_constraintTop_toBottomOf="@id/myBtn1"
        android:visibility="invisible"
        android:src="@drawable/checkmark"
        android:layout_margin="@dimen/avgPadding"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myBtn2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/myBtn1"
        app:layout_constraintTop_toBottomOf="@id/words"
        android:background="@color/maroon"
        android:textColor="@color/orange"
        android:text="@string/no"
        android:textSize="@dimen/bigTxt"
        android:layout_margin="@dimen/avgPadding"/>

</androidx.constraintlayout.widget.ConstraintLayout>
